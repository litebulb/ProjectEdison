<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingLeft="12dp"
		android:paddingTop="14dp">
  <LinearLayout android:background="@drawable/circled_number" android:layout_width="24dp" android:layout_height="24dp" android:gravity="center" android:layout_marginTop="2dp">
    <android.support.v7.widget.AppCompatTextView android:id="@+id/instruction_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/white" android:textSize="14dp" />
  </LinearLayout>

  <android.support.v7.widget.AppCompatTextView android:id="@+id/instruction_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20dp" android:paddingLeft="10dp" />
</LinearLayout>
